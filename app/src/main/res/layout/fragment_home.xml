<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/vertising"
        android:layout_alignParentLeft="true"
        android:id="@+id/bannertop"
        android:layout_alignParentTop="true"
       ></RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layout_below="@id/bannertop"
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"

        app:tabGravity="fill"
        app:tabIndicatorColor="#ff0"
        app:tabMode="fixed"
        android:scrollbarSize="13sp"
        app:tabSelectedTextColor="#16246B"
        app:tabTextColor="#000000"
        />

    <android.support.v4.view.ViewPager android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:layout_below="@id/tablayout"
        xmlns:android="http://schemas.android.com/apk/res/android" />
</RelativeLayout>


