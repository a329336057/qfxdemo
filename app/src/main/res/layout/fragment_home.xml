<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#30000000"
        android:layout_alignParentLeft="true"

        android:id="@+id/bannertop"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/coordinate"
            android:layout_centerVertical="true"
            android:id="@+id/home_coordinate"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/home_coordinate"
            android:text="重庆"
            android:layout_marginLeft="4dp"
            />
        <ImageView
            android:layout_width="245dp"
            android:layout_height="26dp"
            android:id="@+id/home_selectbackground"
            android:background="@drawable/home_select"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/select"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:id="@+id/home_select_icon"
            android:layout_toRightOf="@id/home_coordinate"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="旅游目的地/商家名称"
            android:maxLength="10"
            android:textSize="13dp"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/home_select_icon"
            android:background="@null"/>
    </RelativeLayout>
    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/home_mbanner"
        android:layout_height="150dp"></com.youth.banner.Banner>
    <android.support.v7.widget.RecyclerView
    android:layout_marginTop="16dp"
    android:layout_width="335dp"
    android:id="@+id/home_muen"
        android:layout_centerHorizontal="true"
    android:layout_height="94dp"
    android:layout_below="@id/home_mbanner">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/home_theme"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/home_muen">
    </android.support.v7.widget.RecyclerView>


