<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/login_background"
    tools:context=".Verification.VerificationActivity">

    <ImageView
        android:layout_width="12dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/login_exit_writ" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎登陆起飞线"
        android:textColor="#FDD100"
        android:textSize="29sp"
        android:id="@+id/Verification_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FEFEFE"
        android:text="全网最低的旅游产品 等你来体验"
        android:layout_below="@id/Verification_title"
        android:id="@+id/Verification_message"

        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="验证码已发送至 17783562165"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_below="@id/Verification_message"
        android:id="@+id/Verification_tipis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        android:id="@+id/Verification_texts"
        android:layout_below="@id/Verification_tipis">
        <TextView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/Verification_code1"
            android:background="@drawable/verification_background"
            />
        <TextView

            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/Verification_code1"
            android:layout_marginLeft="9dp"
            android:id="@+id/Verification_code2"
            android:background="@drawable/verification_background"
            />
        <TextView
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/Verification_code2"
            android:layout_marginLeft="9dp"
            android:id="@+id/Verification_code3"
            android:background="@drawable/verification_background"/>
        <TextView
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/Verification_code3"
            android:id="@+id/Verification_code4"
            android:background="@drawable/verification_background"/>
        <TextView
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/Verification_code4"
            android:id="@+id/Verification_code5"
            android:background="@drawable/verification_background"/>
        <TextView
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:layout_toRightOf="@id/Verification_code5"
            android:id="@+id/Verification_code6"
            android:background="@drawable/verification_background"/>
    </LinearLayout>
    <EditText
        android:maxLength="6"
        android:inputType="number"
        android:id="@+id/Verification_inputtext"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:textColor="#00000000"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:layout_below="@id/Verification_tipis"
        android:layout_centerHorizontal="true"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:id="@+id/Verification_resend"
        android:layout_below="@id/Verification_texts"
        android:layout_marginLeft="45dp"
        android:text="重新发送"
        />
    <Button
        android:layout_width="140dp"
        android:text="确认"
        android:textSize="16sp"
        android:id="@+id/Verification_confrim"
        android:layout_height="43dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Verification_resend"
        android:background="@drawable/login_verificantion_true"
        >

    </Button>
</RelativeLayout>