<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activitiy.LoginActivity">
 <com.qifeixianapp.qfxdemo.UI.CustomVideoView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:focusableInTouchMode="false"
     android:clickable="false"
    android:background="#50000000"
     android:id="@+id/login_video"/>
   <ImageView
       android:layout_width="52dp"
       android:padding="20dp"
       android:id="@+id/login_eixt"
       android:layout_height="71dp"
       android:src="@drawable/login_exit_writ"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="8dp"
       android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎登陆起飞线"
        android:textColor="#FDD100"
        android:textSize="29sp"
        android:id="@+id/login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="全网最低的旅游产品 等你来体验"
        android:layout_below="@id/login_title"
        android:id="@+id/login_message"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_below="@id/login_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/login_login"
        android:background="@drawable/login_login">
        <EditText
            android:background="@null"
            android:gravity="center"
            android:layout_width="300dp"
            android:id="@+id/login_phone"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入手机号"
            android:textColorHint="#fff"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

   
    <Button
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:id="@+id/login_verification"
        android:background="@drawable/login_verification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="输入验证码"
        android:textColor="#767575"
        android:layout_below="@id/login_login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginTop="9dp"
        android:textColor="#fff"
        android:layout_below="@id/login_verification"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_tips"
        android:text="未注册用户验证成功自动注册哦"/>


</RelativeLayout>