<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/wallet_shop"
        android:layout_width="25dp"
        android:id="@+id/wallet_iamge"
        android:layout_height="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="生活返佣-佳贝红餐厅"
        android:id="@+id/wallet_title"
        android:textColor="#323131"
        android:textSize="14sp"
        android:layout_toRightOf="@id/wallet_iamge"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wallet_phone"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="#323131"
        android:layout_marginTop="5dp"
        android:text="178***5262"
        android:layout_below="@id/wallet_title"
        android:layout_toRightOf="@id/wallet_iamge"
        android:layout_marginLeft="9dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/wallet_iamge"
        android:layout_below="@id/wallet_phone"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:textColor="#9F9C9C"
        android:layout_marginLeft="9dp"
        android:text="05-06 17:44:42"
        android:layout_width="wrap_content"
        android:id="@+id/wallet_time"
        android:layout_height="wrap_content" />
    <TextView


        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24sp"
        android:textColor="#EB5938"
        android:id="@+id/wallet_moneny"
        android:layout_marginLeft="9dp"
        android:text="+ 0.36"
        android:layout_marginRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
