<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qifeixianapp.qfxdemo">
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 写入SD卡的权限：如果你希望保存相机拍照后的照片 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 地图包、搜索包需要的基础权限 -->
    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 允许程序设置内置sd卡的写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 允许程序访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" /> <!-- 申请短信 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CommonAppTheme">
        <activity android:name=".Activitiy.VipActivity"></activity>
        <activity android:name=".Activitiy.SmsActivity" />
        <activity android:name=".Activitiy.PdfActivity" />
        <activity android:name=".Activitiy.MainsHome" />
        <activity android:name=".Activitiy.MyFansActivity" />
        <activity android:name=".Activitiy.MailListActivity" />
        <activity android:name=".Activitiy.OrderActivity" />
        <activity android:name=".Activitiy.MyDataActivity" />
        <activity android:name=".Activitiy.MyAwardActivity" />
        <activity android:name=".Activitiy.WalletActivity" />
        <activity
            android:name=".Activitiy.VerificationActivity"
            android:label="@string/title_activity_verification"
            android:theme="@style/CommonAppTheme.NoActionBar" />
        <activity
            android:name=".Activitiy.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/CommonAppTheme.NoActionBar" />
        <activity android:name=".Activitiy.BusinessDetailsActivity" />
        <activity android:name=".Activitiy.MerchantListctivity" />
        <activity android:name=".Activitiy.MainsHome" />
        <activity android:name=".Activitiy.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>